<div class="answers">
  <h2>Answers</h2>
  {{new-answer question=model saveAnswer="saveAnswer"}}
    {{#each model.answers as |answer|}}
      <p>{{answer.user}} says:</p>
      <p>{{answer.comment}}</p>
      <p>Submitted: {{answer.date}}</p>
       <button class="btn btn-default" {{action 'deleteAnswer' answer}}>Delete this Answer</button>
    {{/each}}
  </div>
