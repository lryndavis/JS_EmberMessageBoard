{{#each sortedQuestions as |question|}}
  <div class="question">
    <h3>{{#link-to 'question' question.id}}{{question.content}}{{/link-to}}</h3>
    <p>By: {{question.author}}</p>
    {{#if isContentShowing}}
      <p{{action 'contentHide'}}>{{question.notes}}</p>
      <p{{action 'contentHide'}}>Submitted on: {{question.date}}</p>
    {{else}}
      <button class="btn btn-default" {{action 'contentShow'}}>Show Additional Notes</button>
    {{/if}}
  </div>
{{/each}}
